{
    "name": "download of huaban pin",
    "version": "0.2.1",
    "manifest_version": 2,
    "description": "auto download huaban file",
    "permissions": [
        "http://*.huaban.com/",
        "tabs",
        "downloads"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "page_action": {
        "default_icon": "icon-19.png",
        "default_title": "Download huaban"
    },
    "content_scripts": [
        {
            "matches": ["http://*.huaban.com/*"],
            "js": ["jquery.js", "main.js"]
        }
    ]
}